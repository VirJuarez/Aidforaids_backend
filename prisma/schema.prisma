// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String
  address   String?
  photoUrl  String?
}

model Product {
  id          Int     @id @default(autoincrement())
  isbn        String  @unique
  title       String
  price       Float
  author      String
  editorial   String
  stock       Int
}